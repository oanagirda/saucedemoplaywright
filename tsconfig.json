{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["tests", "pages", "fixtures", "playwright.config.ts"]
}